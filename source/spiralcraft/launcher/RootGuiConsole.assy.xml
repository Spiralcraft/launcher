<ExecutionContextService>
  <services>
    <awt:AWTService 
      xmlns:swing="class:/spiralcraft/gui/swing/"
      xmlns:awt="class:/spiralcraft/gui/awt/"
      xmlns:task="class:/spiralcraft/task/"
      xmlns:j="class:/java/lang/"
      xmlns:launcher="class:/spiralcraft/launcher/"
      xmlns:console="class:/spiralcraft/gui/swing/console/"
      xmlns:jawt="class:/java/awt/"
      xmlns:appkit="class:/spiralcraft/app/kit/"
      xmlns:app="class:/spiralcraft/app/"
      >
      <views>
        <swing:FrameControl>
          <title>{|[launcher:ApplicationManager].viewTitle|} : Spiralcraft Launcher
          </title>
          <minimumSize>
            <awt:Dimension>
              <width>800
              </width>
              <height>600
              </height>
            </awt:Dimension>
          </minimumSize>

         
          <autoCenter>true
          </autoCenter>
<!--           
          <menuBar>
            <swing:MenuBarControl>
              <menus>
                <swing:MenuControl>
                  <text>File</text>
                </swing:MenuControl>
                <swing:MenuControl>
                  <text>Edit</text>
                </swing:MenuControl>
              </menus>
            </swing:MenuBarControl>
          </menuBar>
-->
          <content>
            <swing:ScrollPaneControl>
              
              <content>
                <console:OutputPanelControl>
                  <messageHandlers>
                    <appkit:TriggerHandler>
                      <messageType x="[@app:InitializeMessage].@TYPE"/>
                      <x>
                        { [launcher:ExecutionContextService].outStream=[console:OutputPanelControl].createStream()
                        , [launcher:ExecutionContextService].errStream=[console:OutputPanelControl].createStream([@jawt:Color].(128,0,0))
                        }
                      </x>
                    </appkit:TriggerHandler>
                  </messageHandlers>
                </console:OutputPanelControl>
              
              </content>
            </swing:ScrollPaneControl>
          </content>
          <onWindowClosing x="[*task:Eval{`[@j:System].@exit(0)`}]"/>
          <debug>true
          </debug>
        </swing:FrameControl>
      </views>
      <debug>true
      </debug>
    </awt:AWTService>
  
  </services>
</ExecutionContextService>